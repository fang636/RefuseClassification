/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

swiper {
  height: 330rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
}

swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height: 100%;
  border-radius: 18rpx;
}

.myContainer {
  margin-left: 25rpx;
  margin-right: 25rpx;
}

.toolBar {
  display: flex;
  margin: 20rpx 0;
}

.toolBar .item {
  flex: 1;
  width: 33.3333%;
}

.toolBar .item image {
  margin: 0 auto;
  width: 95rpx;
  height: 95rpx;
  display: block;
}

.toolBar .item text {
  display: block;
  text-align: center;
  font-size: 16px;
  color: #aaa;
  margin-top: 5rpx;
}
