/* pages/bigThing/bigThing.wxss */

.myContainer {
  display: flex;
  flex-direction: column;
  margin: 0 20rpx;
  border-top: 1rpx solid #e0e0e0;
  align-items: center;
}

.info {
  display: flex;
  border: 1rpx solid #e0e0e0;
  align-items: center;
  height: 110rpx;
  padding-left: 20rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
  border-radius: 10rpx;
}

.info text {
  width: 150rpx;
  font-size: 40rpx;
}

.info input {
  flex: 1;
}
