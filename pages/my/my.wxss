.myContainer {
  display: flex;
  flex-direction: column;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.userinfo-avatar {
  border-radius: 50%;
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border: 5rpx solid #aaa;
}

.userinfo-nickname {
  color: #eee;
}

